<%- include('include/_header') %>

<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/">
          <i class="fas fa-angle-double-left"></i>
          Lista Produtos
        </a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Editar Produto</h2>
      <span class="text-light">
        Use o formulário abaixo para atualizar um produto
      </span>
    </div>

    <form method="POST" id="atualizar_produto">
      <div class="novo_produto">
        <div class="form-group">
          <label for="codigo" class="text-light">Codigo</label>
          <input type="hidden" name="id" value="<%= produto._id %>" />
          <input
            type="text"
            name="codigo"
            required
            value="<%= produto.codigo %>"
            placeholder="Digite o codigo do produto"
          />
        </div>

        <div class="form-group">
          <label for="descricao" class="text-light">Descrição</label>
          <input
            type="text"
            name="descricao"
            value="<%= produto.descricao %>"
            placeholder="Digite a descrição do produto"
          />
        </div>

        <div class="form-group">
          <label for="preco" class="text-light">Preço</label>
          <input
            type="text"
            name="preco"
            value="<%= produto.preco%>"
            placeholder="Digite o preço de produtos"
          />
        </div>

        <div class="form-group">
          <label for="quantidade" class="text-light">Quantidade</label>
          <input
            type="text"
            name="quantidade"
            value="<%= produto.quantidade%>"
            placeholder="Digite a quantidade do produto"
          />
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Salvar</button>
        </div>
      </div>
    </form>
  </div>
</main>

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
